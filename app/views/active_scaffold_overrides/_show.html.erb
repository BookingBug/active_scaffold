<%if @record && @record.id%><span class="top_id"><%=@record.id%></span><%end%>
<h4><%= active_scaffold_config.show.label(@record.to_label.nil? ? nil : h(@record.to_label)) %></h4>

<%= render :partial => 'show_columns', :locals => {:columns => active_scaffold_config.show.columns, :record => @record} -%>

<div class="form-footer">
  <%= link_to as_(:close), main_path_to_return, :class => 'as_cancel cancel btn reg', :remote => request.xhr? %>
  <%= loading_indicator_tag(:action => :create, :id => params[:id]) %>
</div>
